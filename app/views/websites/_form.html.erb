
<%= form_for @website do |f| %>
  <%= f.label :title %><br/>
  <%= f.text_field :title, :required => true %><br/>


  <%= f.label :description %><br/>
  <%= f.text_area :description, :required => true %><br/>

  <%= f.label :image %><br/>
  <%= f.url_field :image %><br/>

  <%= f.label :link %><br/>
  <%= f.url_field :link %><br/>


  <%= f.submit %>
<% end %>
