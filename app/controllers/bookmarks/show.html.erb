<h1><%= @bookmark.title %></h1>

<p><%= @bookmark.description %></p>

<% unless @bookmark.image.blank?  %>
<%= image_tag @bookmark.image, :alt => @bookmark.title, :class => 'feature' %>
<% end %>

<div class="controls">
  <%= link_to 'Edit Bookmark', edit_bookmark_path(@bookmark) %>
  <%= link_to 'Delete Bookmark', @bookmark, :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
</div>
